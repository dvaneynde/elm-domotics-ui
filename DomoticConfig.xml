<?xml version="1.0" encoding="UTF-8"?>
<domotic xmlns="http://dlvmechanografie.eu/DomoticConfig" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dlvmechanografie.eu/DomoticConfig DomoticConfig.xsd ">

	<!-- Lichten en Stopcontacten, incl. All On/Off -->
	<switch name="SchakLichtInkom" longClick="true" />
	<lamp name="LichtInkom" desc="Inkom" ui="Nutsruimtes:0" autoOffSec="300" blink="true">
		<toggle src="SchakLichtInkom" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtWC0" desc="Licht WC gelijkvloers." />
	<lamp name="LichtWC0" desc="WC" ui="Nutsruimtes:6">
		<toggle src="SchakLichtWC0" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakVentilatorWC0" />
	<fan name="VentilatorWC0" desc="Ventilator WC" delayOnSec="180" delayOffSec="180" onSec="300">
		<toggle src="SchakVentilatorWC0" />
		<off src="SchakVentilatorWC0" event="LongClick" />
		<delayedOnOff src="LichtWC0" />
	</fan>

	<switch name="SchakLichtGarageTuin" singleClick="true" longClick="true" doubleClick="true"/>
	<lamp name="LichtGarageTuin" desc="Garage (Tuin)" ui="Nutsruimtes:3" >
		<toggle src="SchakLichtGarageTuin" />
		<ecoToggle src="SchakLichtGarageTuin" event="DoubleClick"/>
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>
	<switch name="SchakLichtGaragePoort" />
	<lamp name="LichtGaragePoort" desc="Garage (Poort)" ui="Nutsruimtes:2" autoOffSec="300" blink="false">
		<toggle src="SchakLichtGaragePoort" />
		<toggle src="SchakLichtGarageTuin" event="LongClick" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtKeuken" />
	<lamp name="LichtKeuken" desc="Keuken" ui="Beneden:0">
		<toggle src="SchakLichtKeuken" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtBadk0" />
	<lamp name="LichtBadk0" desc="Badkamer +0" ui="Nutsruimtes:4">
		<toggle src="SchakLichtBadk0" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakVentilatorBadk0" />
	<fan name="VentilatorBadk0" desc="Ventilator Badkamer">
		<toggle src="SchakVentilatorBadk0" />
	</fan>

	<dimmerSwitches name="SchakLichtVeranda" />
	<dimmedLamp name="LichtVeranda" fullOnHwOutput="4095" desc="Veranda" ui="Beneden:1">
		<dimmerSwitches src="SchakLichtVeranda" />
		<off src="SchakLichtInkom" event="LongClick" />
	</dimmedLamp>

	<dimmerSwitches name="SchakLichtCircanteRondom" />
	<dimmedLamp name="LichtCircanteRondom" fullOnHwOutput="4095" desc="Eetkamer" ui="Beneden:2">
		<dimmerSwitches src="SchakLichtCircanteRondom" />
		<off src="SchakLichtInkom" event="LongClick" />
	</dimmedLamp>

	<switch name="SchakLichtCircante" />
	<lamp name="LichtCircante" desc="Circante Tafel" ui="Beneden:3">
		<toggle src="SchakLichtCircante" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<dimmerSwitches name="SchakLichtZithoek" />
	<dimmedLamp name="LichtZithoek" fullOnHwOutput="4095" desc="Zithoek" ui="Beneden:4">
		<dimmerSwitches src="SchakLichtZithoek" />
		<off src="SchakLichtInkom" event="LongClick" />
	</dimmedLamp>

	<switch name="SchakLichtBureau" doubleClick="true" />
	<lamp name="LichtBureau" desc="Bureau" ui="Beneden:5">
		<toggle src="SchakLichtBureau" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtGangBoven" />
	<lamp name="LichtGangBoven" desc="Gang Boven" ui="Kinderen:1" autoOffSec="300" blink="true">
		<toggle src="SchakLichtGangBoven" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtBadk1" />
	<lamp name="LichtBadk1" desc="Badkamer +1" ui="Kinderen:5">
		<toggle src="SchakLichtBadk1" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtTomasWand" />
	<lamp name="LichtTomasWand" desc="Tomas Wand" ui="Kinderen:0">
		<toggle src="SchakLichtTomasWand" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtTomasSpots" /><!-- TODO nakijken of klopt met bedrading -->
	<lamp name="LichtTomasSpots" desc="Tomas Spots" ui="Kinderen:1"><!-- TODO nakijken of klopt met relais -->
		<toggle src="SchakLichtTomasSpots" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtDriesWand" />
	<lamp name="LichtDriesWand" desc="Dries Wand" ui="Kinderen:0">
		<toggle src="SchakLichtDriesWand" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtDries" />
	<lamp name="LichtDries" desc="Dries Spots" ui="Kinderen:1">
		<toggle src="SchakLichtDries" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtRoosWand" />
	<lamp name="LichtRoosWand" desc="Roos Wand" ui="Kinderen:0">
		<toggle src="SchakLichtRoosWand" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakLichtRoos" />
	<lamp name="LichtRoos" desc="Roos Spots" ui="Kinderen:1">
		<toggle src="SchakLichtRoos" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>

	<switch name="SchakBuitenTuin" singleClick="true" longClick="true" />
	<lamp name="LichtTerras" desc="Licht terras en zijkant" ui="Buiten:0">
		<toggle src="SchakBuitenTuin" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>
	<lamp name="StopkBuiten" desc="Stopcontact buiten" ui="Buiten:1">
		<toggle src="SchakBuitenTuin" event="LongClick" />
		<off src="SchakLichtInkom" event="LongClick" />
	</lamp>


	<!-- Nachtlicht -->
	<timerDayNight name="TimerNacht">
		<on hour="20" minute="30" />
		<off hour="6" minute="0" />
	</timerDayNight>
	<lamp name="LichtNacht" desc="Nachtlichten">
		<on src="TimerNacht" event="on" />
		<off src="TimerNacht" event="off" />
	</lamp>

	<!-- New Year <newyear name="newyear" start="2013-12-27T22:59:50" end="2013-12-28T00:01:00"> <toggle src="SchakLichtBureau" event="double" 
		/> </newyear> -->

	<!-- Screens -->
	<switch name="SchakScreenAllUp" singleClick="true" longClick="true" />
	<switch name="SchakScreenAllDown" singleClick="true" longClick="true" />

	<switch name="SchakScreenTomasUp" />
	<switch name="SchakScreenTomasDown" />
	<screen name="ScreenTomas" desc="Tomas" motor-up-time="30" motor-dn-time="30" ui="Screens:3">
		<upDown srcDown="SchakScreenTomasDown" srcUp="SchakScreenTomasUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenDriesTuinUp" />
	<switch name="SchakScreenDriesTuinDown" />
	<screen name="ScreenDriesTuin" desc="Dries (T)" motor-up-time="30" motor-dn-time="30" ui="Screens:4">
		<upDown srcDown="SchakScreenDriesTuinDown" srcUp="SchakScreenDriesTuinUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenDriesOpzijUp" />
	<switch name="SchakScreenDriesOpzijDown" />
	<screen name="ScreenDriesOpzij" desc="Dries (Z)" motor-up-time="30" motor-dn-time="30" ui="Screens:5">
		<upDown srcDown="SchakScreenDriesOpzijDown" srcUp="SchakScreenDriesOpzijUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenRoosUp" />
	<switch name="SchakScreenRoosDown" />
	<screen name="ScreenRoos" desc="Roos" motor-up-time="30" motor-dn-time="30" ui="Screens:6">
		<upDown srcDown="SchakScreenRoosDown" srcUp="SchakScreenRoosUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenBreedUp" />
	<switch name="SchakScreenBreedDown" />
	<screen name="ScreenBreed" desc="Breed" motor-up-time="40" motor-dn-time="36" ui="Screens:1">
		<upDown srcDown="SchakScreenBreedDown" srcUp="SchakScreenBreedUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenLangUp" />
	<switch name="SchakScreenLangDown" />
	<screen name="ScreenLang" desc="Smal" motor-up-time="100" motor-dn-time="100" ui="Screens:2">
		<upDown srcDown="SchakScreenLangDown" srcUp="SchakScreenLangUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>

	<switch name="SchakScreenKeukenUp" />
	<switch name="SchakScreenKeukenDown" />
	<screen name="ScreenKeuken" desc="Keuken" motor-up-time="25" motor-dn-time="20" ui="Screens:7">
		<upDown srcDown="SchakScreenKeukenDown" srcUp="SchakScreenKeukenUp" />
		<upDown srcDown="SchakScreenAllDown" srcUp="SchakScreenAllUp" event="LongClick" />
	</screen>


	<!-- Wind & Licht meter -->
	<windSensor name="Windmeter" highFreq="5" lowFreq="2" highTimeBeforeAlert="2" lowTimeToResetAlert="5" channel="Windmeter"
		ui="SPECIAAL:2" />
	<lightGauge name="Lichtmeter" low="3500" high="3600" low2highTime="30" high2lowTime="180" channel="AnalogIn" ui="SPECIAAL:3" />
	<sunWindController name="ZonWindAutomaat" desc="Zon/Wind Automaat" ui="Screens:0">
		<!-- TODO zon en wind, afhankelijk van groep andere parameters rond lichtsterkte, ook rekening houdende met zonnestand. Dus hier moeten 
			groepen kunnen gedefinieerd worden, met verschillende parameters, b.v. ook alarm etc. moeten hier bij wind en sun. -->
		<wind sensor="Windmeter" />
		<sun sensor="Lichtmeter" />
		<screen name="ScreenBreed" />
		<screen name="ScreenTomas" />
		<screen name="ScreenDriesTuin" />
		<screen name="ScreenDriesOpzij" />
		<screen name="ScreenRoos" />
		<screen name="ScreenKeuken" />
	</sunWindController>

</domotic>
